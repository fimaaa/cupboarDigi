<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_root_storage_screen"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginEnd="10dp"
        >
        <ImageView
            android:id="@+id/iv_background_storage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@color/colorDarkWood"
            />
        <ImageView
            android:id="@+id/iv_cover_storage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.2"
            android:scaleType="fitXY"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            tools:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_title_storage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/iv_cover_storage"
            app:layout_constraintBottom_toTopOf="@id/tv_volume_storage"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            style="@style/title_small_light"
            android:gravity="center"
            tools:text="One Piece"
            />
        <TextView
            android:id="@+id/tv_volume_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/desc_small_light"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            tools:text="Vol.1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>