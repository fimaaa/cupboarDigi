<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.example.cupboardigi.ui.myitem.MyItemViewModel" />
        <variable
            name="adapter"
            type="com.example.cupboardigi.ui.adapter.AdapterStorage" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/btn_back_myitem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:src="@drawable/ic_launcher_background"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/btn_back_myitem"
            app:layout_constraintBottom_toBottomOf="@id/btn_back_myitem"
            app:layout_constraintStart_toEndOf="@id/btn_back_myitem"
            app:layout_constraintEnd_toStartOf="@id/btn_additem_myitem"
            android:gravity="center"
            style="@style/title_medium_dark"
            android:text="@string/my_item"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_additem_myitem"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/btn_back_myitem"
            app:layout_constraintBottom_toBottomOf="@id/btn_back_myitem"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="22dp"
            style="@style/ButtonPrimary"
            android:text="@string/add"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_back_myitem"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            app:adapter="@{adapter}"
            tools:itemCount="6"
            tools:listitem="@layout/item_listitem_card"
            />
        <include
            android:id="@+id/layout_datanotfound_itmelist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_back_myitem"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            layout="@layout/layout_datanotfound"
            app:title="@{`Data is Empty`}"
            app:desc="@{`Try Add Some Data`}"
            app:buttonDesc="@{`Add New Data`}"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>