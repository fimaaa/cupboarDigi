<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/btn_add_item"
            app:layout_constraintBottom_toBottomOf="@id/btn_add_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_add_item"
            android:gravity="center"
            style="@style/title_medium_dark"
            android:text="Menu List"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorSteel"
            android:text="@string/add_new_item"
            />
        <TextView
            android:id="@+id/tv_title_wishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_add_item"
            android:layout_marginTop="30dp"
            android:gravity="center"
            style="@style/title_small_dark"
            android:text="@string/wishlist"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_wishlist_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_wishlist"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>