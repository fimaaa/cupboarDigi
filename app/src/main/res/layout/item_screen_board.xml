<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        >
        <View
            android:id="@+id/view_margin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintTop_toTopOf="@id/rcv_item_screen"
            app:layout_constraintBottom_toBottomOf="@id/rcv_item_screen"
            app:layout_constraintStart_toStartOf="parent"
            android:translationZ="20dp"
            android:background="@color/colorSteel"
            />
        <ImageView
            android:id="@+id/btn_shown_screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="@id/view_margin"
            app:layout_constraintEnd_toEndOf="@id/view_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_option_screem"
            android:translationZ="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_foreground"
            />
        <ImageView
            android:id="@+id/btn_option_screem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="@id/view_margin"
            app:layout_constraintEnd_toEndOf="@id/view_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:translationZ="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher_foreground"
            />
            <TextView
                android:id="@+id/tv_name_screen"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/rcv_item_screen"
                app:layout_constraintBottom_toBottomOf="@id/rcv_item_screen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationZ="10dp"
                android:gravity="center"
                style="@style/title_large_dark"
                android:background="@color/colorSteel"
                tools:text="asdasdasd"
                />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_item_screen"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toEndOf="@id/view_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:background="@color/colorDarkWood"
            tools:listitem="@layout/item_storage_screen"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
